{
  "expo": {
    "name": "Population +1",
    "slug": "birth-announcement-studio",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#224c39"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Population +1 to save your announcements to your photo library.",
          "savePhotosPermission": "Allow Population +1 to save your announcements to your photo library.",
          "isAccessMediaLocationEnabled": true,
          "accessMediaLocationPermission": "Allow Population +1 to access photo locations."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Population +1 to access your photos to add to announcements."
        }
      ],
      "expo-font"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.populationplusone.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Population +1 to access your photos to add to announcements.",
        "NSPhotoLibraryAddUsageDescription": "Allow Population +1 to save your announcements to your photo library.",
        "NSCameraUsageDescription": "Allow Population +1 to take photos for your announcements."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#224c39"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.newearthling.birthannouncementstudio"
    },
    "extra": {
      "eas": {
        "projectId": "7e8163d6-889e-4be7-8ff0-06602c0fd73c"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
