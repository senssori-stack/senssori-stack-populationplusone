{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "types": [
      "react",
      "react-native"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "."
  },
  "exclude": [
    "BACKUP_*/**/*",
    "website/**/*",
    "scripts/**/*",
    "*.ts",
    "check-*.ts",
    "diagnose-*.ts",
    "test-*.ts",
    "extract-*.ts",
    "generate-*.ts",
    "src/config/firebase.ts",
    "src/data/utils/tracking.ts"
  ],
  "extends": "expo/tsconfig.base"
}
